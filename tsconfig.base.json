{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["packages/types/src/*"],
      "@zzogaebook/types": ["packages/types/src/index.ts"],
      "@zzogaebook/types/*": ["packages/types/src/*"],
      "@config/*": ["packages/config/src/*"]
    }
  }
}
