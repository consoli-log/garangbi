# --- 일반 설정 ---
NODE_ENV=example
PORT=3000

# --- PostgreSQL 연결 정보 ---
# 1. DB 접속 사용자 (example 사용자)
DB_USER=example

# 2. DB 접속 비밀번호 (example 사용자의 비밀번호)
DB_PASSWORD=example_password 

# 3. DB 서버 주소 (로컬)
DB_HOST=localhost

# 4. DB 포트 (기본값 5432)
DB_PORT=5432

# 5. DB 이름 (1단계에서 생성한 데이터베이스 이름)
DB_NAME=example_db

# --- DB URL ---
# [사용자]:[비밀번호]@[호스트]:[포트]/[DB이름]
DATABASE_URL="postgres://example:example_password@localhost:5432/example_db?schema=public"

# --- 프론트 도메인 ---
CORS_ORIGIN=http://localhost:5173

# --- 이메일 인증 설정 ---
EMAIL_VERIFICATION_BASE_URL=http://localhost:5173/verify-email
EMAIL_VERIFICATION_TOKEN_TTL_MINUTES=60

# --- JWT 설정 ---
JWT_SECRET=please-change-this-secret
JWT_ACCESS_TOKEN_TTL_MINUTES=60
JWT_REMEMBER_ME_TOKEN_TTL_MINUTES=20160

# --- 메일 전송 설정 ---
MAIL_PROVIDER=log
MAIL_FROM_EMAIL=no-reply@zzogaebook.local
MAIL_FROM_NAME=쪼개부기
# MAIL_PROVIDER=sendgrid 로 변경 후 아래 API 키 입력
SENDGRID_API_KEY=your-sendgrid-api-key
