{
  "name": "garangbi-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "//": "--- Prisma commands should be run within the server's context ---",
    "prisma": "pnpm --filter @garangbi/server exec prisma",
    "db:studio": "pnpm prisma studio",
    "dev:all": "pnpm db:up && pnpm prisma db push && turbo dev",
    "dev:all:studio": "pnpm dev:all & pnpm db:studio"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "prisma": "^5.22.0",
    "turbo": "^2.0.4"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1"
  }
}